{
  "name": "bi",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "func",
    "cli",
    "express",
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:packages build:apps",
    "dev": "run-p dev:**",
    "deploy": "run-s deploy:*",
    "build:packages": "run-s build:packages:core build:packages:bigquery build:packages:bitrix24 build:packages:moysklad",
    "build:packages:bitrix24": "npm run --workspace='packages/bitrix24' build",
    "build:packages:core": "npm run --workspace='packages/core' build",
    "build:packages:moysklad": "npm run --workspace='packages/moysklad' build",
    "build:packages:bigquery": "npm run --workspace='packages/bigquery' build",
    "build:apps": "run-p build:func build:express build:cli",
    "build:func": "npm run --workspace='func' build",
    "build:express": "npm run --workspace='express' build",
    "build:cli": "npm run --workspace='cli' build",
    "dev:packages:core": "npm run --workspace='packages/core' dev",
    "dev:packages:bigquery": "npm run --workspace='packages/bigquery' dev",
    "dev:packages:bitrix24": "npm run --workspace='packages/bitrix24' dev",
    "dev:packages:moysklad": "npm run --workspace='packages/moysklad' dev",
    "dev:func": "npm run --workspace='func' dev",
    "dev:express": "npm run --workspace='express' dev",
    "deploy:func": "npm run --workspace='func' deploy",
    "env:local": "npm run --workspace='cli' env:local",
    "env:staging": "npm run --workspace='cli' env:staging",
    "env:production": "npm run --workspace='cli' env:production"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^7.7.0",
    "@google-cloud/bigquery-storage": "^4.8.0",
    "@google-cloud/functions-framework": "^3.4.0",
    "@google-cloud/pubsub": "^4.4.0",
    "@google-cloud/tasks": "^5.4.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "ramda": "^0.30.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.13.0",
    "@types/node-fetch": "^3.0.3",
    "@types/ramda": "^0.30.0",
    "@types/resolve": "^1.20.6",
    "esbuild": "^0.21.4",
    "esbuild-plugin-noexternal": "^0.1.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "resolve": "^1.22.8",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5"
  }
}
